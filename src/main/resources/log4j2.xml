<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Properties>
        <property name="LOG_DIR">logs</property>
        <property name="ARCHIVE_LOG_DIR">${LOG_DIR}/archive</property>
        <property name="pattern_file">%d{HH:mm:ss.SSS} [%t] %-5level %logger{5} - %msg%n</property>
    </Properties>

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%r %-5level %logger{3} - %msg%n"/>
        </Console>

        <RollingFile name="FileRolling" filename="${LOG_DIR}/text_log.log" append="true"
                     filePattern="${LOG_DIR}/${date:yyyy-MM-dd}/%d{yyyy-MM-dd_HH-mm}_%i.log">
            <PatternLayout pattern="${pattern_file}"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="1MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Logger name="com.zhukovskiy.task1" level="debug" additivity="false">
            <!--            <Filters>-->
            <!--                <CoinNewFilter threshold="1000" onMatch="ACCEPT" onMismatch="DENY"/>-->
            <!--            </Filters>-->
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileRolling"/>
        </Logger>

        <!-- Root Logger -->
        <Root level="INFO">
            <AppenderRef ref="FileRolling"/>
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
